<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" 
            styleClass="main-background" stylesheets="@../reservation/orderUi.css" 
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="clientGui.reservation.OrderUi_controller">

   <children>
      <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            
            <BorderPane>
               <left>
                  <Button graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleBackBtn" styleClass="back-button" text="â† Back" BorderPane.alignment="CENTER" />
               </left>
               <center>
                  <Label styleClass="header-label" text="Order Management" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </center>
               <right>
                  <HBox prefWidth="80.0" BorderPane.alignment="CENTER" />
               </right>
            </BorderPane>

            <TableView fx:id="orderTable" editable="true" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="Order_numberColumn" text="Order #" />
                <TableColumn fx:id="DateColumn" text="Order Date" />
                <TableColumn fx:id="itemColumn" text="Guests Amount" />
                <TableColumn fx:id="confirmation_codeColumn" text="Conf. Code" />
                <TableColumn fx:id="subscriber_idColumn" text="Subscriber ID" />
                <TableColumn fx:id="date_of_placing_orderColumn" text="Placed On" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <placeholder>
                  <Label text="No orders to display" />
               </placeholder>
            </TableView>

            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleAddOrder" prefHeight="40.0" prefWidth="120.0" styleClass="action-button, add-button" text="Add Order" />
                  <Button mnemonicParsing="false" onAction="#handleUpdateOrder" prefHeight="40.0" prefWidth="120.0" styleClass="action-button, update-button" text="Update Order" />
                  <Button mnemonicParsing="false" onAction="#handleDeleteOrder" prefHeight="40.0" prefWidth="120.0" styleClass="action-button, delete-button" text="Delete Selected" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>

         </children>
      </VBox>
   </children>
</AnchorPane>