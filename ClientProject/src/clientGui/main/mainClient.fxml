<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="240" prefWidth="220">
      <children>
         <Label layoutX="18.0" layoutY="14.0" text="Please select who are you">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
         </Label>

         <Button fx:id="rep_of_the_res" layoutX="20.0" layoutY="50.0" mnemonicParsing="false" onAction="#pressRepresentorOfTheResturant" prefHeight="53.0" prefWidth="180.0" text="Representor of the resturant" />
         <Button fx:id="subscriber" layoutX="20.0" layoutY="110.0" mnemonicParsing="false" onAction="#pressSubscriber" prefHeight="54.0" prefWidth="182.0" text="Subscriber" />
         <Button fx:id="casual_customer" layoutX="20.0" layoutY="170.0" mnemonicParsing="false" onAction="#pressCasualCustomer" prefHeight="53.0" prefWidth="182.0" text="Casual customer" />
      </children>
    </AnchorPane>
</Scene>
