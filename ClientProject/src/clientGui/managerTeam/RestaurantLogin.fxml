<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" 
      prefHeight="400.0" prefWidth="350.0" 
      stylesheets="@../navigation/SelectionScreen.css" 
      styleClass="main-container"
      xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="clientGui.managerTeam.RestaurantLoginController">

   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>

   <children>
      <Label text="Employee Login" styleClass="title-label">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>

      <TextField fx:id="usernameField" promptText="Username" styleClass="input-field" prefHeight="40.0" />
      <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" prefHeight="40.0" />

      <Button mnemonicParsing="false" onAction="#performLogin" 
              prefHeight="45.0" prefWidth="280.0" 
              styleClass="menu-button, primary-button" text="Sign In">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
      
      <Button mnemonicParsing="false" onAction="#goBack" 
              prefHeight="45.0" prefWidth="280.0" 
              styleClass="menu-button" text="Back" />
   </children>
</VBox>