<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" fitToHeight="true" styleClass="main-background"
	stylesheets="@../managerTeam/EmployeeOption.css"
	xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="clientGui.managerTeam.ManagerOptionsController">

	<content>
		<VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-padding: 20;">
			<children>
				<HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="card-pane">
					<children>
						<VBox alignment="CENTER_LEFT" spacing="5.0"
							HBox.hgrow="ALWAYS">
							<Label fx:id="lblDashboardTitle" styleClass="main-title"
								text="Manager Dashboard" />
							<Label fx:id="lblDashboardSubtitle"
								styleClass="sub-label"
								text="Overview &amp; Configuration Center" />
						</VBox>

						<Region HBox.hgrow="ALWAYS" />
                        
                        <Label text="Welcome, Manager" style="-fx-text-fill: #D4AF37; -fx-font-weight: bold;"/>

						<Button onAction="#goBackBtn" styleClass="back-button"
							text="Sign Out" />
					</children>
                    <padding>
                        <Insets top="15" bottom="15" left="30" right="30"/>
                    </padding>
				</HBox>

				<GridPane hgap="25.0" vgap="25.0">
					<columnConstraints>
						<ColumnConstraints hgrow="ALWAYS" percentWidth="40.0" />
						<ColumnConstraints hgrow="ALWAYS" percentWidth="60.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints valignment="TOP" vgrow="ALWAYS" />
					</rowConstraints>

					<children>
                        <!-- Quick Actions Card -->
						<VBox spacing="15.0" styleClass="card-pane"
							GridPane.columnIndex="0">
							<padding>
								<Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
							</padding>
							<children>
								<Label styleClass="section-header" text="Quick Actions" />
								<Label
									styleClass="sub-label"
									text="Navigate to key management modules" />
                                <Separator style="-fx-opacity: 0.1;"/>

								<Button maxWidth="Infinity"
									onAction="#goToWaitingListBtn" 
									styleClass="dashboard-tile-button"
									text="Waiting List Management" wrapText="true" />

								<Button maxWidth="Infinity"
									onAction="#goToOrderDetailsBtn" 
									styleClass="dashboard-tile-button"
									text="Order Tracking &amp; details" wrapText="true" />

								<Button maxWidth="Infinity"
									onAction="#goToRegisterSubscriberBtn" 
									styleClass="dashboard-tile-button"
									text="New Subscriber Registration" wrapText="true" />

								<Button fx:id="btnViewReports" managed="false"
									maxWidth="Infinity" onAction="#goToReportsBtn" 
									styleClass="dashboard-tile-button"
									text="View Reports &amp; Analytics" visible="false" wrapText="true" />

								<Button fx:id="btnSignUp" managed="false"
									maxWidth="Infinity" onAction="#goToSignUpEmployee"
									styleClass="dashboard-tile-button" text="Register New Employee"
									visible="false" wrapText="true" />

							</children>
						</VBox>

                        <!-- Store Config Card -->
						<VBox spacing="20.0" styleClass="card-pane"
							GridPane.columnIndex="1">
							<padding>
								<Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
							</padding>
							<children>
								<HBox alignment="CENTER_LEFT" spacing="10">
									<Label styleClass="section-header"
										text="Store Configuration" />
								</HBox>

								<VBox spacing="10.0" style="-fx-padding: 10; -fx-background-color: rgba(255,255,255,0.03); -fx-background-radius: 8;">
									<Label style="-fx-font-weight: bold; -fx-text-fill: #D4AF37;"
										text="Operating Hours" />
									<HBox alignment="CENTER_LEFT" spacing="15.0">
										<VBox spacing="2">
											<Label style="-fx-font-size: 10px; -fx-text-fill: #aaa;" text="Opening" />
											<TextField fx:id="txtOpenTime" prefWidth="90.0"
												promptText="HH:mm" styleClass="time-field" />
										</VBox>
										<Label style="-fx-padding: 15 0 0 0; -fx-text-fill: #aaa;" text="to" />
										<VBox spacing="2">
											<Label style="-fx-font-size: 10px; -fx-text-fill: #aaa;" text="Closing" />
											<TextField fx:id="txtCloseTime" prefWidth="90.0"
												promptText="HH:mm" styleClass="time-field" />
										</VBox>
                                        <Region HBox.hgrow="ALWAYS"/>
										<Button onAction="#saveStandardHoursBtn"
											prefHeight="30" style="-fx-translate-y: 8;"
											styleClass="action-icon-button" text="Update Hours" />
									</HBox>
								</VBox>

								<VBox spacing="10.0" VBox.vgrow="ALWAYS">
									<Label style="-fx-font-weight: bold; -fx-text-fill: #D4AF37;"
										text="Special Events &amp; Holidays" />

									<HBox alignment="CENTER_LEFT" spacing="10.0">
										<DatePicker fx:id="dpSpecialDate"
											promptText="Select Date" HBox.hgrow="ALWAYS" styleClass="date-picker-dark"/>
									</HBox>

									<HBox alignment="CENTER_LEFT" spacing="10.0">
										<TextField fx:id="txtSpecialOpen" prefWidth="80.0"
											promptText="Start" styleClass="time-field-small" />
										<Label text="to" style="-fx-text-fill: #aaa;"/>
										<TextField fx:id="txtSpecialClose" prefWidth="80.0"
											promptText="End" styleClass="time-field-small" />
										<Button maxWidth="Infinity"
											onAction="#addSpecialDateBtn" styleClass="add-button-small"
											text="Add Exception" HBox.hgrow="ALWAYS" />
									</HBox>

									<ListView fx:id="listSpecialDates" prefHeight="150.0"
										styleClass="custom-list-view" />

									<HBox alignment="CENTER_RIGHT">
										<Button onAction="#removeSpecialDateBtn"
											style="-fx-text-fill: #e74c3c; -fx-cursor: hand;"
											styleClass="text-only-button" text="Remove Selected Entry" />
									</HBox>
								</VBox>

								<Label fx:id="lblHoursStatus" alignment="CENTER"
									maxWidth="Infinity" styleClass="status-label" text="" />
							</children>
						</VBox>
					</children>
				</GridPane>

			</children>
		</VBox>
	</content>
</ScrollPane>