<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" styleClass="main-background"
	stylesheets="@../managerTeam/EmployeeOption.css"
	xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="clientGui.managerTeam.ManagerOptionsController">

	<content>
		<VBox alignment="TOP_CENTER" spacing="20.0">
			<padding>
				<Insets bottom="40.0" left="40.0" right="40.0" top="15.0" />
			</padding>

			<children>
				<HBox alignment="CENTER_LEFT" spacing="10.0">
					<children>
						<VBox alignment="CENTER_LEFT" spacing="5.0"
							HBox.hgrow="ALWAYS">
							<Label fx:id="lblDashboardTitle" styleClass="main-title"
								text="Manager Dashboard" textFill="#0008f7" />

							<Label fx:id="lblDashboardSubtitle"
								style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"
								text="Manage restaurant operations, orders, and settings"
								textFill="#8a8a8e" />
						</VBox>

						<Region HBox.hgrow="ALWAYS" />

						<Button onAction="#goBackBtn" styleClass="back-button"
							text="Sign Out / Back" />
					</children>
				</HBox>

				<Separator opacity="0.5" />

				<GridPane hgap="25.0" vgap="25.0">
					<columnConstraints>
						<ColumnConstraints hgrow="ALWAYS"
							minWidth="300.0" percentWidth="50.0" />
						<ColumnConstraints hgrow="ALWAYS"
							minWidth="300.0" percentWidth="50.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints valignment="TOP" vgrow="ALWAYS" />
					</rowConstraints>

					<children>
						<VBox spacing="15.0" styleClass="card-pane"
							GridPane.columnIndex="0">
							<padding>
								<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
							</padding>
							<children>
								<Label styleClass="section-header" text="Quick Actions"
									textFill="#001dfc" />
								<Label
									style="-fx-text-fill: gray; -fx-font-size: 12px; -fx-padding: 0 0 10 0;"
									text="Select an operation to proceed" />

								<Button maxWidth="Infinity"
									onAction="#goToWaitingListBtn" prefHeight="26.0"
									prefWidth="0.0" styleClass="dashboard-tile-button"
									text="Waiting List" wrapText="true" />

								<Button maxWidth="Infinity"
									onAction="#goToOrderDetailsBtn" prefHeight="15.0"
									prefWidth="123.0" styleClass="dashboard-tile-button"
									text="Order Details" wrapText="true" />

								<Button maxWidth="Infinity"
									onAction="#goToRegisterSubscriberBtn" prefHeight="5.0"
									prefWidth="198.0" styleClass="dashboard-tile-button"
									text="Register Subscriber" wrapText="true" />

								<Button maxWidth="Infinity"
									onAction="#goToTableManagementBtn" prefHeight="5.0"
									prefWidth="198.0" styleClass="dashboard-tile-button"
									text="Manage Tables" wrapText="true" />

								<Button fx:id="btnViewReports" managed="false"
									maxWidth="Infinity" onAction="#goToReportsBtn" prefHeight="5.0"
									prefWidth="198.0"
									styleClass="dashboard-tile-button, report-button"
									text="View Reports" visible="false" wrapText="true" />

                                <Button fx:id="btnMonthlyReports" managed="false"
									maxWidth="Infinity" onAction="#goToMonthlyReportsBtn" prefHeight="5.0"
									prefWidth="198.0"
									styleClass="dashboard-tile-button, report-button"
									text="Monthly Reports" visible="false" wrapText="true" />

								<Button fx:id="btnSignUp" managed="false"
									maxWidth="Infinity" onAction="#goToSignUpEmployee"
									prefHeight="5.0" prefWidth="198.0"
									styleClass="dashboard-tile-button, report-button" text="SignUp"
									visible="false" wrapText="true" />

							</children>
						</VBox>

						<VBox spacing="20.0" styleClass="card-pane"
							GridPane.columnIndex="1">
							<padding>
								<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
							</padding>
							<children>
								<HBox alignment="CENTER_LEFT" spacing="10">
									<Label styleClass="section-header"
										text="Store Configuration" textFill="#1101f7" />
								</HBox>

								<VBox spacing="8.0"
									style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 10;">
									<Label style="-fx-font-weight: bold;"
										styleClass="sub-label" text="Standard Weekly Hours" />
									<HBox alignment="CENTER_LEFT" spacing="10.0">
										<VBox spacing="2">
											<Label style="-fx-font-size: 10px;" text="Open" />
											<TextField fx:id="txtOpenTime" prefWidth="80.0"
												promptText="08:00" styleClass="time-field" />
										</VBox>
										<Label style="-fx-padding: 15 0 0 0;" text="-"
											textFill="#7f8c8d" />
										<VBox spacing="2">
											<Label style="-fx-font-size: 10px;" text="Close" />
											<TextField fx:id="txtCloseTime" prefWidth="80.0"
												promptText="23:00" styleClass="time-field" />
										</VBox>
										<Button onAction="#saveStandardHoursBtn"
											prefHeight="30" style="-fx-translate-y: 8;"
											styleClass="action-icon-button" text="Save" />
									</HBox>
								</VBox>

								<VBox spacing="10.0" VBox.vgrow="ALWAYS">
									<Label style="-fx-font-weight: bold;"
										styleClass="sub-label" text="Special Dates &amp; Holidays" />

									<HBox alignment="CENTER_LEFT" spacing="8.0">
										<DatePicker fx:id="dpSpecialDate"
											promptText="Select Date" HBox.hgrow="ALWAYS" />
									</HBox>

									<HBox alignment="CENTER_LEFT" spacing="8.0">
										<TextField fx:id="txtSpecialOpen" prefWidth="70.0"
											promptText="Start" styleClass="time-field-small" />
										<Label text="-" />
										<TextField fx:id="txtSpecialClose" prefWidth="70.0"
											promptText="End" styleClass="time-field-small" />
										<Button maxWidth="Infinity"
											onAction="#addSpecialDateBtn" styleClass="add-button-small"
											text="Add Date" HBox.hgrow="ALWAYS" />
									</HBox>

									<ListView fx:id="listSpecialDates" prefHeight="120.0"
										styleClass="custom-list-view" />

									<HBox alignment="CENTER_RIGHT">
										<Button onAction="#removeSpecialDateBtn"
											style="-fx-text-fill: #e74c3c; -fx-cursor: hand;"
											styleClass="text-only-button" text="Remove Selected" />
									</HBox>
								</VBox>

								<Label fx:id="lblHoursStatus" alignment="CENTER"
									maxWidth="Infinity" styleClass="status-label" text="" />
							</children>
						</VBox>
					</children>
				</GridPane>

			</children>
		</VBox>
	</content>
</ScrollPane>