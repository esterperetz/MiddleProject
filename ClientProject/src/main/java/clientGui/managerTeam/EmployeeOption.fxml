<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" styleClass="main-background"
	stylesheets="@../managerTeam/EmployeeOption.css"
	xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="clientGui.managerTeam.ManagerOptionsController">

	<content>
		<VBox alignment="TOP_CENTER" spacing="20.0">
			<padding>
				<Insets bottom="40.0" left="40.0" right="40.0" top="15.0" />
			</padding>

			<children>
				<HBox alignment="CENTER_LEFT" spacing="10.0">
					<children>
						<VBox alignment="CENTER_LEFT" spacing="5.0" HBox.hgrow="ALWAYS">
							<Label fx:id="lblDashboardTitle" styleClass="main-title"
								text="Manager Dashboard" textFill="#0008f7" />
							<Label fx:id="lblDashboardSubtitle"
								style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"
								text="Manage restaurant operations, orders, and settings"
								textFill="#8a8a8e" />
						</VBox>
						<Region HBox.hgrow="ALWAYS" />
						<Button onAction="#goBackBtn" styleClass="back-button" text="Sign Out / Back" />
					</children>
				</HBox>

				<Separator opacity="0.5" />

				<GridPane hgap="25.0" vgap="25.0">
					<columnConstraints>
						<ColumnConstraints hgrow="ALWAYS" minWidth="300.0" percentWidth="50.0" />
						<ColumnConstraints hgrow="ALWAYS" minWidth="300.0" percentWidth="50.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints valignment="TOP" vgrow="ALWAYS" />
					</rowConstraints>

					<children>
						<VBox spacing="15.0" styleClass="card-pane" GridPane.columnIndex="0">
							<padding>
								<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
							</padding>
							<children>
								<Label styleClass="section-header" text="Quick Actions" textFill="#001dfc" />
								<Label style="-fx-text-fill: gray; -fx-font-size: 12px; -fx-padding: 0 0 10 0;"
									text="Select an operation to proceed" />

								<Button maxWidth="Infinity" onAction="#goToWaitingListBtn"
									styleClass="dashboard-tile-button" text="Waiting List" wrapText="true" />
								<Button maxWidth="Infinity" onAction="#goToOrderDetailsBtn"
									styleClass="dashboard-tile-button" text="Order Details" wrapText="true" />
								<Button maxWidth="Infinity" onAction="#goToRegisterSubscriberBtn"
									styleClass="dashboard-tile-button" text="Register Subscriber" wrapText="true" />
								<Button maxWidth="Infinity" onAction="#goToTableManagementBtn"
									styleClass="dashboard-tile-button" text="Manage Tables" wrapText="true" />

								<Button fx:id="btnViewReports" managed="false" maxWidth="Infinity"
									onAction="#goToReportsBtn" styleClass="dashboard-tile-button, report-button"
									text="View Reports" visible="false" wrapText="true" />
								<Button fx:id="btnMonthlyReports" managed="false" maxWidth="Infinity"
									onAction="#goToMonthlyReportsBtn" styleClass="dashboard-tile-button, report-button"
									text="Monthly Reports" visible="false" wrapText="true" />
								<Button fx:id="btnSignUp" managed="false" maxWidth="Infinity"
									onAction="#goToSignUpEmployee" styleClass="dashboard-tile-button, report-button"
									text="SignUp" visible="false" wrapText="true" />
							</children>
						</VBox>

						<VBox spacing="20.0" styleClass="card-pane" GridPane.columnIndex="1">
							<padding>
								<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
							</padding>
							<children>
								<HBox alignment="CENTER_LEFT" spacing="10">
									<Label styleClass="section-header" text="Manage Schedule" textFill="#1101f7" />
								</HBox>

								<VBox spacing="15.0" VBox.vgrow="ALWAYS">
									<Label style="-fx-text-fill: gray;"
										text="Select a date to update specific opening hours." wrapText="true" />

									<VBox spacing="5.0">
										<Label style="-fx-font-weight: bold;" text="Select Date:" />
										<DatePicker fx:id="dpManageDate" maxWidth="Infinity" promptText="Pick a date" />
									</VBox>

									<HBox spacing="15.0" alignment="CENTER_LEFT">
										<VBox spacing="2">
											<Label style="-fx-font-size: 11px;" text="Opening Time" />
											<TextField fx:id="txtManageOpen" prefWidth="90.0" promptText="08:00" styleClass="time-field" />
										</VBox>
										<Label style="-fx-padding: 18 0 0 0;" text="-" textFill="#7f8c8d" />
										<VBox spacing="2">
											<Label style="-fx-font-size: 11px;" text="Closing Time" />
											<TextField fx:id="txtManageClose" prefWidth="90.0" promptText="23:00" styleClass="time-field" />
										</VBox>
									</HBox>

									<CheckBox fx:id="cbIsSpecial" text="Mark as Special Event / Holiday"
										style="-fx-font-size: 13px; -fx-text-fill: #2c3e50;" />
									
									<CheckBox fx:id="cbIsClosed" text="Mark as Closed (Day Off)"
										style="-fx-font-size: 13px; -fx-text-fill: #e74c3c; -fx-font-weight: bold;" />

									<Button maxWidth="Infinity" onAction="#updateScheduleBtn"
										styleClass="dashboard-tile-button"
										style="-fx-background-color: #0008f7; -fx-text-fill: white;"
										text="Update Hours for Date" />

									<Separator />

									<Label style="-fx-font-weight: bold; -fx-font-size: 12px;" text="Recently Updated:" />
									<ListView fx:id="listSpecialDates" prefHeight="100.0" styleClass="custom-list-view" />

									<HBox alignment="CENTER_RIGHT">
										<Button onAction="#removeSpecialDateBtn"
											style="-fx-text-fill: #e74c3c; -fx-cursor: hand;"
											styleClass="text-only-button" text="Remove Selected" />
									</HBox>
								</VBox>
								
								<Label fx:id="lblHoursStatus" alignment="CENTER" maxWidth="Infinity" styleClass="status-label" text="" />
							</children>
						</VBox>
					</children>
				</GridPane>
			</children>
		</VBox>
	</content>
</ScrollPane>