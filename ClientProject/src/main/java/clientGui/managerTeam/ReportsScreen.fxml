<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" styleClass="main-background" stylesheets="@ReportStyle.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientGui.managerTeam.ReportsController">
   <content>
      <VBox alignment="TOP_CENTER" spacing="20.0">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <VBox alignment="CENTER_LEFT">
                     <Label styleClass="main-title" text="Monthly Performance Reports" textFill="#2c3e50" />
                     <Label styleClass="sub-label" text="Analyze restaurant activity trends" textFill="#7f8c8d" />
                  </VBox>
                  <Region HBox.hgrow="ALWAYS" />
                  
                  <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-padding: 8; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                      <Label text="Filter:" style="-fx-font-weight: bold;"/>
                      <ComboBox fx:id="comboMonth" prefWidth="80.0" promptText="MM" styleClass="filter-combo"/>
                      <Label text="/" />
                      <ComboBox fx:id="comboYear" prefWidth="90.0" promptText="YYYY" styleClass="filter-combo"/>
                      <Button text="Refresh" onAction="#refreshReportsBtn" styleClass="action-button-primary"/>
                  </HBox>
                  
                  <Button onAction="#goBackBtn" styleClass="back-button" text="Back" />
               </children>
            </HBox>

            <Separator opacity="0.5" />

            <VBox spacing="10.0" styleClass="chart-pane" VBox.vgrow="ALWAYS" fillWidth="true">
               <Label text="Hourly Activity (Arrivals, Departures, Cancellations)" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ecf0f1;" />
               
               <AreaChart fx:id="barChartTimes" prefHeight="350.0" createSymbols="false" legendSide="BOTTOM" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                 <xAxis>
                   <CategoryAxis label="Hour of Day" side="BOTTOM" fx:id="xAxisTimes"/>
                 </xAxis>
                 <yAxis>
                   <NumberAxis label="Number of Customers" side="LEFT" />
                 </yAxis>
               </AreaChart>
            </VBox>

            <VBox spacing="10.0" styleClass="chart-pane" VBox.vgrow="ALWAYS" fillWidth="true">
               <Label text="Orders vs. Waiting List Trends" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ecf0f1;" />
               
               <AreaChart fx:id="lineChartOrders" prefHeight="350.0" createSymbols="true" legendSide="BOTTOM" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                 <xAxis>
                   <CategoryAxis label="Day of Month" side="BOTTOM" fx:id="xAxisDays"/>
                 </xAxis>
                 <yAxis>
                   <NumberAxis label="Count" side="LEFT" />
                 </yAxis>
               </AreaChart>
            </VBox>
            
         </children>
      </VBox>
   </content>
</ScrollPane>