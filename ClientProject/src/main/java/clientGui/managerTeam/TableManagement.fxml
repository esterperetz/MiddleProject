<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<VBox alignment="TOP_CENTER" spacing="20.0" styleClass="main-background" stylesheets="@EmployeeOption.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientGui.managerTeam.TableManagementController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="30.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <VBox alignment="CENTER_LEFT">
            <Label styleClass="main-title" text="Table Management" textFill="#0008f7" />
            <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" text="Add, update, or remove restaurant tables" />
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#handleBackBtn" styleClass="back-button" text="Back" />
    </HBox>

    <TableView fx:id="tablesUserId" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colTableNumber" text="Table Number" />
            <TableColumn fx:id="colSeats" text="Seats" />
            <TableColumn fx:id="colStatus" text="Status" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 8;">
        <TextField fx:id="txtTableNumber" promptText="Table Number" styleClass="text-field" />
        <TextField fx:id="txtSeats" promptText="Seats" styleClass="text-field" />
        <Button onAction="#handleClearBtn" styleClass="action-icon-button" style="-fx-background-color: #95a5a6;" text="Clear / New" />
        <Button onAction="#handleAddTable" styleClass="action-icon-button" text="Add Table" />
        <Button onAction="#handleUpdateTable" styleClass="action-icon-button" style="-fx-background-color: #f39c12;" text="Update Seats" />
    </HBox>
    
    <HBox alignment="CENTER">
         <Button onAction="#handleDeleteTable" styleClass="action-icon-button" style="-fx-background-color: #e74c3c;" text="Delete Selected Table" />
    </HBox>

</VBox>
