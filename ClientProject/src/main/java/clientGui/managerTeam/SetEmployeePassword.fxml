<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" 
      prefHeight="450.0" prefWidth="400.0" 
      stylesheets="@../navigation/SelectionScreen.css" 
      styleClass="main-container"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="clientGui.managerTeam.SetEmployeePasswordController">

   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>

   <children>
      <Label text="Set Password" styleClass="title-label">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      
      <Label text="Please create a secure password for the new account." 
             styleClass="subtitle-label" wrapText="true" textAlignment="CENTER">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>

      <VBox spacing="10.0" maxWidth="300.0">
          <children>
              <Label text="Password:" style="-fx-text-fill: black; -fx-font-weight: bold;"/>
              <PasswordField fx:id="txtPassword" promptText="Enter password" 
                             styleClass="input-field" prefHeight="40.0" />
              
              <Label text="Confirm Password:" style="-fx-text-fill: black; -fx-font-weight: bold;"/>
              <PasswordField fx:id="txtConfirmPassword" promptText="Re-enter password" 
                             styleClass="input-field" prefHeight="40.0" />
          </children>
      </VBox>

      <Label fx:id="lblMessage" text="" wrapText="true" alignment="CENTER"
             style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" />

      <Button mnemonicParsing="false" onAction="#handleSaveBtn" 
              prefHeight="45.0" prefWidth="280.0" 
              styleClass="menu-button, primary-button" text="Save &amp; Create">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
      
      <Button mnemonicParsing="false" onAction="#goToBackBtn" 
              prefHeight="45.0" prefWidth="280.0" 
              styleClass="menu-button" text="Cancel" />
   </children>
</VBox>