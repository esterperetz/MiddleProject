<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="900.0"
	styleClass="main-background"
	stylesheets="@../reservation/WaitingList.css"
	xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="clientGui.reservation.WaitingListController">

	<children>
		<VBox spacing="15.0" AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<padding>
				<Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
			</padding>

			<children>
				<BorderPane>
					<left>
						<Button graphicTextGap="10.0" mnemonicParsing="false"
							onAction="#handleBackBtn" styleClass="back-button" text="â† Back"
							BorderPane.alignment="CENTER" />
					</left>
					<center>
						<Label styleClass="header-label"
							text="Waiting List Management" BorderPane.alignment="CENTER">
							<font>
								<Font name="System Bold" size="24.0" />
							</font>
						</Label>
					</center>
					<right>
						<HBox prefWidth="80.0" />
					</right>
				</BorderPane>

				<HBox alignment="CENTER_LEFT" spacing="15.0"
					styleClass="filter-container">
					<padding>
						<Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
					</padding>
					<children>
						<Label style="-fx-font-weight: bold; -fx-text-fill: #555;"
							text="Filter by Date:" />

						<DatePicker fx:id="filterDate"
							onAction="#handleDateSelect" promptText="Select Date"
							styleClass="date-picker-style" />

						<Button mnemonicParsing="false"
							onAction="#handleClearFilter" styleClass="secondary-button"
							text="Show All Dates" />
					</children>
				</HBox>

				<TableView fx:id="waitingListTable" VBox.vgrow="ALWAYS">
					<columns>
						<TableColumn fx:id="colWaitingId" text="Waiting ID"
							prefWidth="50.0" />

						<TableColumn fx:id="colCustomerId" text="Customer ID" />

						<TableColumn fx:id="colGuests" text="Guests" />

						<TableColumn fx:id="colEnterTime" text="Enter Time" />

						<TableColumn fx:id="colConfirmationCode"
							text="Conf. Code" />

						<TableColumn fx:id="colCustomerName"
							text="Customer Name" />
					</columns>

					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>

				<HBox alignment="CENTER" spacing="20.0">
					<children>
						<Button mnemonicParsing="false"
							onAction="#handleAssignTable" prefHeight="45.0" prefWidth="180.0"
							styleClass="action-button, confirm-button" text="Assign Table" />

						<Button mnemonicParsing="false"
							onAction="#handleRemoveEntry" prefHeight="45.0" prefWidth="180.0"
							styleClass="action-button, delete-button" text="Remove from List" />
					</children>
					<VBox.margin>
						<Insets top="10.0" />
					</VBox.margin>
				</HBox>

			</children>
		</VBox>
	</children>
</AnchorPane>