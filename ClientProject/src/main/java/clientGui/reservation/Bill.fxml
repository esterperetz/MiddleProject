<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" 
      prefHeight="600.0" prefWidth="420.0" 
      stylesheets="@../navigation/SelectionScreen.css" 
      styleClass="main-container"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="clientGui.reservation.BillController">

   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>

   <children>
      <Label text="Order Bill" styleClass="title-label" style="-fx-font-size: 28px; -fx-text-fill: #2c3e50;" />
      
      <VBox spacing="10.0" VBox.vgrow="ALWAYS" 
            style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5); -fx-padding: 20;">
         
         <Label text="Order Summary" style="-fx-font-weight: bold; -fx-text-fill: #95a5a6; -fx-font-size: 14px;" />
         
         <ListView fx:id="itemsList" VBox.vgrow="ALWAYS" 
                   style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 5;" />
         
         <Separator style="-fx-opacity: 0.5;" />
         
         <VBox spacing="8.0">
            <HBox alignment="CENTER_LEFT">
               <Label text="Subtotal" style="-fx-font-size: 15px; -fx-text-fill: #7f8c8d;" />
               <HBox HBox.hgrow="ALWAYS" />
               <Label fx:id="lblOriginalPrice" text="0.00 $" style="-fx-font-size: 15px; -fx-font-weight: bold;" />
            </HBox>

            <HBox fx:id="discountBox" alignment="CENTER_LEFT" visible="false" managed="false">
               <Label text="Subscriber Discount (10%)" style="-fx-font-size: 15px; -fx-text-fill: #27ae60;" />
               <HBox HBox.hgrow="ALWAYS" />
               <Label fx:id="lblDiscountAmount" text="-0.00 $" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" />
            </HBox>

            <Separator style="-fx-padding: 5 0 5 0;" />

            <HBox alignment="CENTER_LEFT">
               <Label text="Total to Pay" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
               <HBox HBox.hgrow="ALWAYS" />
               <Label fx:id="lblFinalPrice" text="0.00 $" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" />
            </HBox>
         </VBox>
      </VBox>

      <HBox spacing="15.0" alignment="CENTER">
         <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#goBack" 
                 prefHeight="45.0" prefWidth="150.0" 
                 styleClass="menu-button" 
                 style="-fx-background-color: #ecf0f1; -fx-text-fill: #7f8c8d; -fx-font-weight: bold; -fx-background-radius: 10;" 
                 text="Cancel" />
                 
         <Button fx:id="btnPay" mnemonicParsing="false" onAction="#payAndReleaseTable" 
                 prefHeight="45.0" prefWidth="200.0" 
                 styleClass="menu-button, primary-button" 
                 style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" 
                 text="Proceed to Pay" />
      </HBox>

   </children>
</VBox>