<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" 
      prefHeight="400.0" prefWidth="350.0" 
      stylesheets="@../navigation/SelectionScreen.css" 
      styleClass="main-container"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="clientGui.user.SubscriberOptionController">

   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>

   <children>
      <Label text="Choose action" styleClass="title-label">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>

      <Button mnemonicParsing="false" onAction="#goToReservationBtn" 
              prefHeight="45.0" prefWidth="280.0" 
              styleClass="menu-button, primary-button" text="Order place" />
      
      <Button mnemonicParsing="false" onAction="#goToSeatTableBtn" 
              prefHeight="45.0" prefWidth="280.0" 
              styleClass="menu-button, primary-button" text="Recieve table" />
              
      <Button mnemonicParsing="false" onAction="#CheckOutActionBtn" 
              prefHeight="45.0" prefWidth="280.0" 
              styleClass="menu-button, primary-button" text="Check Out" />
              
      <Button fx:id="btnSubscriberSpecial" 
              visible="false" managed="false"
              mnemonicParsing="false" onAction="#subscriberActionBtn" 
              prefHeight="45.0" prefWidth="280.0" 
              styleClass="menu-button, primary-button" text="Subscriber History" />

       <Button mnemonicParsing="false" onAction="#goBackBtn" 
              prefHeight="45.0" prefWidth="280.0" 
              styleClass="menu-button" text="back">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>