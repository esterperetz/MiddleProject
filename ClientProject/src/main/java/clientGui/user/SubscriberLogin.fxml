<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" prefHeight="450.0" prefWidth="380.0" 
      stylesheets="@../navigation/SelectionScreen.css" styleClass="main-container"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="clientGui.user.SubscriberLoginController">

   <padding>
      <Insets bottom="50.0" left="40.0" right="40.0" top="50.0" />
   </padding>

   <children>
      <Label text="Subscriber Login" styleClass="title-label" />

      <TextField fx:id="SubscriberCode" promptText="Enter Subscriber ID" styleClass="input-field" prefHeight="45.0" />
      
      <VBox spacing="10.0" alignment="CENTER">
          <Button onAction="#performLogin" prefHeight="50.0" prefWidth="300.0" 
                  styleClass="menu-button, primary-button" text="Sign In" />
          
          <Button onAction="#handleForgotCode" 
                  style="-fx-background-color: transparent; -fx-text-fill: #C5A059; -fx-cursor: hand; -fx-font-size: 14px;" 
                  text="Forgot my code?" />
      </VBox>
      
      <Button onAction="#goBack" prefHeight="45.0" prefWidth="300.0" styleClass="menu-button" text="Back" />
   </children>
</VBox>