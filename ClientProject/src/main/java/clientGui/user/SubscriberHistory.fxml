<ScrollPane fitToWidth="true" hbarPolicy="NEVER" pannable="true" 
            prefHeight="750.0" prefWidth="950.0" 
            stylesheets="@../user/SubscriberHistory.css" 
            styleClass="main-background"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="clientGui.user.SubscriberHistoryController">

   <content>
      <VBox alignment="TOP_CENTER" spacing="30.0">
         <padding>
            <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
         </padding>
         
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#goBackBtn" 
                          prefHeight="40.0" prefWidth="110.0" 
                          styleClass="menu-button" text="â† Back" />

                  <VBox alignment="CENTER_LEFT">
                      <Label text="Order History" styleClass="title-label">
                      </Label>
                      <Label text="Track your past meals and receipts" styleClass="subtitle-label" />
                  </VBox>

                  <Region HBox.hgrow="ALWAYS" />

                  <VBox prefWidth="200.0" styleClass="card-pane" alignment="CENTER">
                     <children>
                        <Label text="My Orders" styleClass="data-label" />
                        <Label text="View All" styleClass="highlight-label" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <Line endX="800.0" stroke="#bdc3c7" strokeWidth="0.5" opacity="0.3"/>

            <VBox spacing="15.0" styleClass="glass-pane">
                
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="Recent Activity" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #bdc3c7;"/>
                        
                        <Region HBox.hgrow="ALWAYS" /> 
                        
                        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="filter-box">
                            <children>
                                <Label text="Filter from:" style="-fx-text-fill: #bdc3c7; -fx-font-weight: bold; -fx-font-size: 12px;"/>
                                
                                <DatePicker fx:id="filterDatePicker" onAction="#handleDateFilter" promptText="Select Date" prefWidth="130.0" style="-fx-background-color: transparent; -fx-border-width: 0;"/>
                                
                                <Button text="X" onAction="#handleClearFilter" styleClass="close-button" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
                
                <VBox styleClass="card-pane">
                    <TableView fx:id="ordersTable" prefHeight="450.0" styleClass="modern-table">
                      <columns>
                        <TableColumn fx:id="colOrderId" prefWidth="80.0" text="Order #" />
                        <TableColumn fx:id="colDate" prefWidth="120.0" text="Date" />
                        <TableColumn fx:id="colTime" prefWidth="100.0" text="Time" />
                        <TableColumn fx:id="colTotal" prefWidth="120.0" text="Total Price" />
                        <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
                      </columns>
                       <columnResizePolicy>
                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                       </columnResizePolicy>
                       <placeholder>
                          <Label text="No orders found based on current filter" style="-fx-text-fill: #7f8c8d;"/>
                       </placeholder>
                    </TableView>
                </VBox>
            </VBox>

         </children>
      </VBox>
   </content>
</ScrollPane>