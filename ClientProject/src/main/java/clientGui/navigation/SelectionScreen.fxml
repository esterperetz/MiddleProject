<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" 
      prefHeight="400.0" prefWidth="350.0" 
      stylesheets="@SelectionScreen.css" 
      styleClass="main-container"
      xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="clientGui.navigation.SelectionController">

   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>

   <children>
      <Label text="Welcome to BISTRO" styleClass="title-label" />
      
      <Label text="Please select your role:" styleClass="subtitle-label">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>

      <Button fx:id="rep_of_the_res" mnemonicParsing="false" onAction="#pressRepresentorOfTheResturant" 
              prefHeight="50.0" prefWidth="280.0" 
              styleClass="menu-button" text="Restaurant Representative" />
              
      <Button fx:id="subscriber" mnemonicParsing="false" onAction="#pressSubscriber" 
              prefHeight="50.0" prefWidth="280.0" 
              styleClass="menu-button" text="Subscriber" />
              
      <Button fx:id="casual_customer" mnemonicParsing="false" onAction="#pressCasualCustomer" 
              prefHeight="50.0" prefWidth="280.0" 
              styleClass="menu-button" text="Casual Customer" />
              
      <Button fx:id="sign_up" mnemonicParsing="false" onAction="#pressSignUp" 
        prefHeight="50.0" prefWidth="280.0" 
        styleClass="menu-button" text="Sign Up" />
   </children>
</VBox>