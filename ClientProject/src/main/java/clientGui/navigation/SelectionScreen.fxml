<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane stylesheets="@SelectionScreen.css" styleClass="main-background"
           prefHeight="500.0" prefWidth="400.0"
           xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="clientGui.navigation.SelectionController">

    <VBox alignment="CENTER" spacing="25.0" styleClass="main-container" maxWidth="350" maxHeight="450">
       <padding>
          <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
       </padding>
    
       <children>
          <Label text="BISTRO" styleClass="title-label" />
          
          <Label text="Select User Role" styleClass="subtitle-label">
             <VBox.margin>
                <Insets bottom="20.0" />
             </VBox.margin>
          </Label>
    
          <Button fx:id="rep_of_the_res" mnemonicParsing="false" onAction="#pressRepresentorOfTheResturant" 
                  prefHeight="50.0" prefWidth="280.0" 
                  styleClass="menu-button" text="Restaurant Manager" />
                  
          <Button fx:id="subscriber" mnemonicParsing="false" onAction="#pressSubscriber" 
                  prefHeight="50.0" prefWidth="280.0" 
                  styleClass="menu-button" text="Registered Subscriber" />
                  
          <Button fx:id="casual_customer" mnemonicParsing="false" onAction="#pressCasualCustomer" 
                  prefHeight="50.0" prefWidth="280.0" 
                  styleClass="menu-button" text="Guest Customer" />
                  
          
       </children>
    </VBox>
</StackPane>