<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="server.gui.ServerViewController" prefWidth="600.0" prefHeight="400.0"
            stylesheets="@serverStyle.css" styleClass="main-background">

    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label text="Connected Clients" styleClass="title-label" style="-fx-font-size: 20px;" />
            <TableView fx:id="tblClients" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colIp" text="IP Address" prefWidth="200.0"/>
                    <TableColumn fx:id="colHost" text="Host Name" prefWidth="300.0"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <VBox style="-fx-padding: 0 20 20 20;">
             <Label text="Server Log" styleClass="label" style="-fx-padding: 0 0 5 0;"/>
             <TextArea fx:id="txtLog" prefRowCount="6" wrapText="true" editable="false"/>
        </VBox>
    </bottom>

</BorderPane>